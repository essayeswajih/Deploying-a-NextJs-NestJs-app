server {
    listen 80;
    server_name chronocarto.tn www.chronocarto.tn;

    root /var/www/certbot;

    location /.well-known/acme-challenge/ {
        allow all;
        try_files $uri $uri/ =404;
    }

    location / {
        return 301 https://$host$request_uri; # Redirection HTTP -> HTTPS
    }
}

server {
    listen 443 ssl http2;
    server_name chronocarto.tn www.chronocarto.tn;

    ssl_certificate /etc/letsencrypt/live/chronocarto.tn/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/chronocarto.tn/privkey.pem;

    # üîê SSL optimisations
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:
                 ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:
                 ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-
